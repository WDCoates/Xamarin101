<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Images"
             xmlns:imaging="clr-namespace:Windows.UI.Xaml.Media.Imaging;assembly=Windows.Foundation.UniversalApiContract"
             x:Class="Images.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to Xamarin.Forms 101!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <!-- When Image Property Build Action is 'Content' use UWP=./Assets/Images/Name.ext-->
        <Image 
            VerticalOptions="FillAndExpand"
            HorizontalOptions="{OnPlatform Default=Center}"
            Source="{OnPlatform Default=HeadShot, UWP=./Assets/Images/HeadShot.png}"
            WidthRequest="{OnPlatform iOS=300, Android=250, UWP=250}"
            />
    </StackLayout>
</ContentPage>
