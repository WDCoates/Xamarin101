<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Grids"
             x:Class="Grids.MainPage">

    <Grid Margin="20,35,20,20">
        <!--<Label Text="The Grid has its Margin property set, to control the rendering position of the Grid." />-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <!--Add Spans-->
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!-- The Default is 0 for Columns and Rows-->
        <Label                 Text="Column 0, Row 0"/>
        <Label Grid.Column="1" Text="Column 1, Row 0"/>
        <Label Grid.Row="1"    Text="Column 0, Row 1" />
        <Label Grid.Column="1" Grid.Row="1" Text="Column 1, Row 1" />

        <!--Add Spans-->
        <Label Grid.Row="2" Grid.ColumnSpan="2" Text="This text uses the ColumnSpan property to span both columns." />
        <Label Grid.Row="3" Grid.RowSpan="2" Text="This text uses the RowSpan property to span two rows." />

    </Grid>

</ContentPage>
